<script>
    function triggerVote() {
        document.getElementById('view-idle').classList.add('hidden');
        document.getElementById('view-vote').classList.remove('hidden');
    }

    function castVote(isYes) {
        document.getElementById('view-vote').classList.add('hidden');
        document.getElementById('view-result').classList.remove('hidden');

        setTimeout(() => {
            animateResults();
        }, 300);
    }

    function animateResults() {
        const yesTarget = 82;
        const noTarget = 18;

        document.getElementById('bar-yes').style.width = yesTarget + '%';
        document.getElementById('bar-no').style.width = noTarget + '%';

        animateValue("score-yes", 0, yesTarget, 1500);
        animateValue("score-no", 0, noTarget, 1500);
    }

    function animateValue(id, start, end, duration) {
        let obj = document.getElementById(id);
        let range = end - start;
        let minTimer = 50;
        let stepTime = Math.max(Math.floor(duration / range), minTimer);
        let startTime = new Date().getTime();
        let endTime = startTime + duration;
        let timer;

        function run() {
            let now = new Date().getTime();
            let remaining = Math.max((endTime - now) / duration, 0);
            let value = Math.round(end - (remaining * range));
            obj.innerHTML = value + "%";
            if (value == end) {
                clearInterval(timer);
            }
        }

        timer = setInterval(run, stepTime);
        run();
    }

    function resetDemo() {
        document.getElementById('bar-yes').style.width = '0%';
        document.getElementById('bar-no').style.width = '0%';
        document.getElementById('score-yes').innerHTML = '0%';
        document.getElementById('score-no').innerHTML = '0%';
        document.getElementById('view-result').classList.add('hidden');
        document.getElementById('view-idle').classList.remove('hidden');
    }
</script>

